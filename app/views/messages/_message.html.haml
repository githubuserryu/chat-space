.chat-main__message-list__user(data-message-id = "#{message.id}")
  .chat-main__message-list__user__name
    = message.user.name
  .chat-main__message-list__user__time
    = message.created_at.strftime("%Y/%m/%d %H:%M")

.chat-main__message-list__message
  - if message.message.present?
    %p.lower-message__content
      = message.message
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
