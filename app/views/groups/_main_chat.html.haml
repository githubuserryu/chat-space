.chat-main
  .chat-main__group-info
    .main-name
      test
    .main-edit
    =link_to "#" ,class: "edit-btn" do
      Edit
    .main-member
      member:name
  .chat-main__message-list
    .chat-main__message-list__user
      .chat-main__message-list__user__name
        まさ
      .chat-main__message-list__user__time
        2019/12/9
    .chat-main__message-list__message
      おはよう

  .chat-main__massage-form
    = form_for [ @group, @message ] do |f|
      = f.text_field :message, class: "form__message", placeholder: "type a message"
      .massage-form__main
        = f.label :image, class: "input-box__image" do
          = icon("far", "image", class: "image-icon")
          = f.file_field :image, class:"image-input"
      = f.submit 'Send', class: "submit-btn"